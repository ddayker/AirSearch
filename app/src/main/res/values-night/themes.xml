<resources>
    <!-- Base application theme. -->
    <style name="Theme.AirSearch" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/darkblue</item>
        <item name="colorPrimaryVariant">@color/darkblue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/darkblue</item>
        <item name="colorSecondaryVariant">@color/darkblue</item>
        <item name="colorOnSecondary">@color/gray</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textColorHint">@color/darkblue</item>
        <item name="android:editTextColor">@color/darkblue</item>
        <item name="fontFamily">@font/days</item>
        <item name="snackbarStyle">@style/CustomSnackbar</item>
        <item name="snackbarTextViewStyle">@style/CustomSnackbar</item>
    </style>

    <style name="Theme.AirSearch.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AirSearch.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.AirSearch.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CustomSnackbar" parent="Widget.Design.Snackbar">
        <item name="android:background">@color/oceanblue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>
</resources>
